class Solution {
    public int pivotIndex(int[] nums) {
        int n = nums.length;
        int[] suff = new int[n];
        suff[0] = nums[0];
        for(int i = 1; i < n; i++){
            suff[i] = suff[i-1] + nums[i];
        }
        for(int i = 0; i < n; i++){
            int leftSum = (i==0) ? 0 : suff[i-1];
            int rightSum = suff[n-1] - suff[i];
            if(leftSum == rightSum){
                return i;
            } 
        }
        return -1;
    }
}
